{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "WmsDatabase": "Host=localhost;Port=5432;Database=wms_db;Username=postgres;Password=postgres"
    },
    "Kafka": {
        "BootstrapServers": "localhost:9092",
        "SecurityProtocol": "PLAINTEXT",
        "Consumer": {
            "GroupId": "wms-consumer-group",
            "AutoOffsetReset": "earliest",
            "EnableAutoCommit": false
        }
    },
    "Consumer": {
        "Topics": [
            "pos.sales.events",
            "pos.returns.events"
        ]
    }
}